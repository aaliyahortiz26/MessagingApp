
@model MessagingApp.Models.Preferences
@{
    Layout = null;
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/PreferencesStyleSheet.css" />
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <!--<div class="test">
        <h1>Preference</h1>
    </div>-->

    <form asp-action="Preferences" method="post">
        <div class="out">
            <div class=" b">
                <!--<div class="in">-->
                <br>
                <h1>Preferences</h1>

                <p2> Text Color </p2>
                <select class="textColorDropdown" asp-for="TxtColor" id="tcolor">
                    @if (DBObject.Tcolor == "red")
                    {
                        <option value="red" selected>Red</option>
                        <option value="green">Green</option>
                        <option value="blue">Blue</option>
                        <option value="black">Black</option>
                    }
                    @if (DBObject.Tcolor == "green")
                    {
                        <option value="red">Red</option>
                        <option value="green" selected>Green</option>
                        <option value="blue">Blue</option>
                        <option value="black">Black</option>
                    }
                    @if (DBObject.Tcolor == "blue")
                    {
                        <option value="red">Red</option>
                        <option value="green">Green</option>
                        <option value="blue" selected>Blue</option>
                        <option value="black">Black</option>
                    }
                    @if (DBObject.Tcolor == "black")
                    {
                        <option value="red">Red</option>
                        <option value="green">Green</option>
                        <option value="blue">Blue</option>
                        <option value="black" selected>Black</option>
                    }


                </select>
                <br>
                <p2>Current Color: @DBObject.Tcolor</p2>
                <br />
                <br />
                <p2> Text Size </p2>
                <select class="textSizeDropdown" asp-for="TxtSize" id="theme">
                    @if (DBObject.m_TSize == 14)
                    {
                        <option value="14" selected>Small 14</option>
                        <option value="18">Medium 18</option>
                        <option value="22">Large 22</option>

                    }
                    @if (DBObject.m_TSize == 18)
                    {
                        <option value="14">Small 14</option>
                        <option value="18" selected>Medium 18</option>
                        <option value="22">Large 22</option>
                    }
                    @if (DBObject.m_TSize == 22)
                    {
                        <option value="14">Small 14</option>
                        <option value="18">Medium 18</option>
                        <option value="22" selected>Large 22</option>
                    }
                </select>
                @if (DBObject.m_TSize == 14)
                {
                    <p2>Current Color: Small 14</p2>
                }
                @if (DBObject.m_TSize == 18)
                {
                    <p2>Current Color: Medium 18</p2>
                }
                @if (DBObject.m_TSize == 22)
                {
                    <p2>Current Color: Large 22</p2>
                }
                <br />
                <br />

                <p2> Background Theme </p2>
                <select class="backgroundColorDropdown" asp-for="Baccolor" id="theme">
                    @if (DBObject.Bcolor == "linear-gradient(blue, red)")
                    {
                        <option value="linear-gradient(blue, red)" selected>Blue and Red</option>
                        <option value="linear-gradient(blue, orange)">Blue and Orange</option>
                        <option value="linear-gradient(blue, purple)">Blue and Purple</option>
                        <option value="linear-gradient(blue, green)">Blue and Green</option>
                        <option value="url(../../Images/EarthBackground.jpeg)">Earth Image</option>
                    }
                    @if (DBObject.Bcolor == "linear-gradient(blue, orange)")
                    {
                        <option value="linear-gradient(blue, red)">Blue and Red</option>
                        <option value="linear-gradient(blue, orange)" selected>Blue and Orange</option>
                        <option value="linear-gradient(blue, purple)">Blue and Purple</option>
                        <option value="linear-gradient(blue, green)">Blue and Green</option>
                        <option value="url(../../Images/EarthBackground.jpeg)">Earth Image</option>
                    }
                    @if (DBObject.Bcolor == "linear-gradient(blue, purple)")
                    {
                        <option value="linear-gradient(blue, red)">Blue and Red</option>
                        <option value="linear-gradient(blue, orange)">Blue and Orange</option>
                        <option value="linear-gradient(blue, purple)" selected>Blue and Purple</option>
                        <option value="linear-gradient(blue, green)">Blue and Green</option>
                        <option value="url(../../Images/EarthBackground.jpeg)">Earth Image</option>
                    }
                    @if (DBObject.Bcolor == "linear-gradient(blue, green)")
                    {
                        <option value="linear-gradient(blue, red)">Blue and Red</option>
                        <option value="linear-gradient(blue, orange)">Blue and Orange</option>
                        <option value="linear-gradient(blue, purple)">Blue and Purple</option>
                        <option value="linear-gradient(blue, green)" selected>Blue and Green</option>
                        <option value="url(../../Images/EarthBackground.jpeg)">Earth Image</option>
                    }
                    @if (DBObject.Bcolor == "url(../../Images/EarthBackground.jpeg)")
                    {
                        <option value="linear-gradient(blue, red)">Blue and Red</option>
                        <option value="linear-gradient(blue, orange)">Blue and Orange</option>
                        <option value="linear-gradient(blue, purple)">Blue and Purple</option>
                        <option value="linear-gradient(blue, green)">Blue and Green</option>
                        <option value="url(../../Images/EarthBackground.jpeg)" selected>Earth Image</option>
                    }

                </select>
                <br>

                @if (DBObject.Bcolor == "linear-gradient(blue, red)")
                {
                    <p2>Current Color: Blue and Red</p2>
                }
                @if (DBObject.Bcolor == "linear-gradient(blue, orange)")
                {
                    <p2>Current Color: Blue and Orange</p2>
                }
                @if (DBObject.Bcolor == "linear-gradient(blue, purple)")
                {
                    <p2>Current Color: Blue and Purple</p2>
                }
                @if (DBObject.Bcolor == "linear-gradient(blue, green)")
                {
                    <p2>Current Color: Blue and Green</p2>
                }
                @if (DBObject.Bcolor == "url(../../Images/EarthBackground.jpeg)")
                {
                    <p2>Current Color: Earth Image</p2>
                }
                <br>
                <button class="button button1" type="submit" onclick="location.href='@Url.Action("PreferencesScreen", "Home")'">Apply Changes</button>
                <!--</div>-->
            </div>
            </div>

    </form>

</body>
</html>
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
    window.onload = function () {
        alert("@ViewBag.Message");
    };
    </script>
}