@model MessagingApp.Models.GroupTemplateModel
@{
    // Use login layout under View->Shared folder
    Layout = "_Layout";
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/Chat_StyleSheet/GroupTemplateStyleSheet.css" />
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="groupTemplateContainer">
        <form class="centered messageArea" asp-action="GroupTemplate" method="post">
            <h1>Group Name: @GroupTemplateModel.m_groupName</h1>



            <div class="fields">
                @for (int i = 0; i < 15; i++)
                {


                <p>
                    <label id="UsernameLabel">Message</label>
                </p>
                }
            </div>



           
        </form>
        <form class="centered sendMessageArea" asp-action="GroupTemplate" method="post">



            <div class="fields">
                <input id="messageInput" asp-for="message" placeholder="Enter Message" />
                <button class="sendMessageButton" type="submit">Send Message</button>


            </div>



            <button class="goHomeButton" type="button" onclick="location.href='@Url.Action("Index", "Home")'">Go home</button>
        </form>
    </div>
</body>
</html>
