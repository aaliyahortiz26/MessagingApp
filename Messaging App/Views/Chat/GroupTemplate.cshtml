@model MessagingApp.Models.GroupTemplateModel
@{
    // Use login layout under View->Shared folder
    Layout = "_Layout";
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/Chat_StyleSheet/GroupTemplateStyleSheet.css" />
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <style>
        body{
            background-image: @DBObject.Bcolor;
        }
        p {
            color:@DBObject.Tcolor;
        }

    </style>
    <div class="groupTemplateContainer">
        <form class="messageArea" asp-action="GroupTemplate" method="post">
            <button class="goHomeButton" type="button" onclick="location.href='@Url.Action("Index", "Home")'">Go home</button>
            <h1 id="groupName">Group Name: @GroupTemplateModel.m_groupName</h1>

            <div class="fields">
                <!--  @for (int i = 0; i < 15; i++)
        {


            <p>
                <label id="messagesLabel">Message</label>
            </p>
        }-->
                <p>
                    <label id="messagesLabelNotFromDatabase">Message</label>
                </p>
            </div>




        </form>



            <form class="right contactArea" asp-action="GroupTemplate" method="post">              
                <div class="fields">
                    <!--  @for (int i = 0; i < 15; i++)
                  {


                      <p>
                          <label id="messagesLabel">Message</label>
                      </p>
                  }-->
                    <p>
                        <h2 id="contactAreaLabel">Contacts</h2>
                    </p>
                </div>
            </form>




            <form class="centered sendMessageArea" asp-action="GroupTemplate" method="post">



                    <div class="fields">
                        <!--<input id="messageInput" asp-for="message" placeholder="Enter Message" />-->
                        <input id="messageInput" type="text" placeholder="Enter Message" >

                        <button id="sendMessageButton" type="button" value="Send Message">Send Message</button>


                    </div>
                </form>
        </div>
</body>
</html>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>